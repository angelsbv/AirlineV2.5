@model AirlineV2._5.Models.Aircraft

@{
    ViewData["Title"] = "Editando Aeronave";
}
<style>.form-group{margin-bottom:35px!important;}form{margin:25px;}</style>
<h1>Editar Aeronave</h1>
<hr />
<sbc-row class="row">
    <sbc-col class="col-md-5" style="margin:0 auto;">
        <form action="~/aviones/editar/@Model.AcID" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AcID" />
            <input type="hidden" asp-for="AcRegisterDate" />
            <div class="form-group">
                <label asp-for="AcModel" class="control-label">Modelo</label>
                <input asp-for="AcModel" class="form-control" />
                <span asp-validation-for="AcModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcType" class="control-label">Tipo</label>
                <input asp-for="AcType" class="form-control" />
                <span asp-validation-for="AcType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcCapacity" class="control-label">Capacidad</label>
                <input asp-for="AcCapacity" class="form-control" />
                <span asp-validation-for="AcCapacity" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:-15px;">
                <input type="submit" value="Guardar Cambios" class="btn btn-outline-primary" style="width:100%;" />
            </div>
        </form>
    </sbc-col>
</sbc-row>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
